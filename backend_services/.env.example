# Claude (Anthropic) API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (if using PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/mun_assistant
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=mun_assistant
# DB_USER=postgres
# DB_PASSWORD=password

# Redis Configuration (if using Redis for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# External API Keys (optional)
# NEWS_API_KEY=your_news_api_key_here
# GNEWS_API_KEY=your_gnews_api_key_here

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# WebSocket Configuration
WS_PING_INTERVAL=30000
MAX_CONNECTIONS=1000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true

# Feature Flags
ENABLE_DOCUMENT_PROCESSING=true
ENABLE_REAL_TIME_SEARCH=false
ENABLE_EXTERNAL_APIS=false

# Performance
MAX_TASK_QUEUE_SIZE=1000
MAX_CONCURRENT_TASKS=5
TASK_PROCESSING_INTERVAL=100